<%= simple_form_for(@minute, url: item_minute_path(@item, @minute)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date %>
    <%= f.input :text %>
    <%= f.input :status, collection: MinutesController::MINUTE_STATUSES.values %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-warning" %>
  </div>
<% end %>
