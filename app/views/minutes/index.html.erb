<% provide(:title, "Minutes") %>
<h1>Minutes</h1>
<p id="notice"><%= notice %></p>


<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Meeting</th>
      <th>Text</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @minutes.each do |minute| %>
      <%= render minute %>
    <% end %>
  </tbody>
</table>
<%= will_paginate @minutes, renderer: BootstrapPagination::Rails %>

<br>

<%= link_to 'New Minute', new_minute_path %>
